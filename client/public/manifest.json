{
    "name": "TabTrackr",
    "description": "Track your time usage on all of your tabs, maximize productivity and spot unwanted patterns over time",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "index.html",
        "default_icon": "myLogo48.png"
    },
    "icons": {
        "16": "myLogo48.png",
        "48": "myLogo128.png",
        "128": "myLogo128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "idle"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}